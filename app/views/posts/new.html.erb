<!-- app/views/posts/new.html.erb -->
<div class="max-w-3xl mx-auto mt-8 p-6 bg-white rounded-lg shadow">
  <h2 class="text-2xl mb-6">断捨離の記録を投稿する</h2>

  <%= form_with(model: @post, local: true) do |f| %>
    <%= f.hidden_field :item_id %>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2">アイテム名</label>
      <p class="p-2 bg-gray-100 rounded"><%= @item.name %></p>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2">投稿タイトル</label>
      <%= f.text_field :title, class: "w-full p-2 border rounded", value: "#{@item.name}を断捨離しました" %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2">投稿者名</label>
      <%= f.text_field :user_name, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2">画像</label>
      <%= f.file_field :image, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2">売上金額（売却した場合のみ）</label>
      <%= f.number_field :amount, class: "w-full p-2 border rounded", min: 0 %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 mb-2">コメント</label>
      <%= f.text_area :comment, class: "w-full p-2 border rounded h-32", placeholder: "断捨離した感想や経緯などを書いてください" %>
    </div>

    <div class="flex justify-end">
      <%= link_to 'キャンセル', items_path, class: "mr-2 px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400" %>
      <%= f.submit '投稿する', class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>