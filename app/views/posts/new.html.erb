<div class="min-h-screen w-full flex flex-col">
  <header class="w-full flex justify-between items-center py-6 px-10 bg-gray-100">
    <%= link_to root_path, class: "text-3xl italic text-gray-700 hover:text-gray-900 transition-colors duration-200 font-bold" do %>
      Let's danshari
    <% end %>
    <nav class="space-x-4">
      <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'hover:underline text-gray-700' %>
      <%= link_to 'マイページ', '#', class: 'hover:underline text-gray-700' %>
      <%= link_to '一覧ページ', posts_path, class: 'hover:underline text-gray-700' %>
    </nav>
  </header>

  <main class="flex-grow p-8">
    <div class="max-w-3xl mx-auto mt-8 p-6 bg-white rounded-lg shadow">
      <h2 class="text-2xl mb-6">断捨離の記録を投稿する</h2>

      <%= form_with(model: @post, url: posts_path, method: :post, local: true) do |f| %>
        <%= f.hidden_field :item_id %>

        <div class="mb-4">
          <label class="block text-gray-700 mb-2">アイテム名</label>
          <% if @item.present? %>
            <p class="p-2 bg-gray-100 rounded"><%= @item.name %></p>
          <% else %>
            <p class="p-2 bg-gray-100 rounded text-gray-500">アイテムが選択されていません</p>
          <% end %>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 mb-2">投稿タイトル</label>
          <%= f.text_field :title, class: "w-full p-2 border rounded", value: @item.present? ? "#{@item.name}を断捨離しました" : "断捨離しました" %>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 mb-2">投稿者名</label>
          <%= f.text_field :user_name, class: "w-full p-2 border rounded" %>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 mb-2">画像</label>
          <%= f.file_field :image, class: "w-full p-2 border rounded" %>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 mb-2">売上金額（売却した場合のみ）</label>
          <%= f.number_field :amount, class: "w-full p-2 border rounded", min: 0 %>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 mb-2">コメント</label>
          <%= f.text_area :comment, class: "w-full p-2 border rounded h-32", placeholder: "断捨離した感想や経緯などを書いてください" %>
        </div>

        <div class="flex justify-end">
          <%= link_to 'キャンセル', items_path, class: "mr-2 px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400" %>
          <%= f.submit '投稿する', class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
        </div>
      <% end %>
    </div>
  </main>

  <footer class="w-full py-6 px-10 bg-gray-100">
    <nav class="flex justify-center space-x-8">
      <%= link_to 'お問い合わせページ', '#', class: 'text-gray-500 hover:underline text-lg' %>
      <%= link_to 'プライバシーポリシー', '#', class: 'text-gray-500 hover:underline text-lg' %>
      <%= link_to '利用規約', '#', class: 'text-gray-500 hover:underline text-lg' %>
    </nav>
  </footer>
</div>