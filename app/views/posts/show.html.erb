<div class="max-w-3xl mx-auto mt-8 bg-white rounded-lg shadow overflow-hidden">
  <% if @post.image.present? %>
    <div class="w-full h-64 bg-center bg-cover" style="background-image: url('<%= @post.image.url %>')"></div>
  <% end %>
  
  <div class="p-6">
    <h1 class="text-2xl font-bold mb-2"><%= @post.title %></h1>
    <p class="text-gray-600 mb-4">投稿者: <%= @post.user_name %> · <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    
    <% if @post.amount && @post.amount > 0 %>
      <p class="mt-2 mb-4 text-green-600 font-semibold">売上金額: <%= number_to_currency(@post.amount, unit: '¥', precision: 0) %></p>
    <% end %>
    
    <div class="border-t border-gray-200 pt-4 mt-4">
      <% if @post.comment.present? %>
        <div class="prose max-w-none">
          <%= simple_format @post.comment %>
        </div>
      <% else %>
        <p class="text-gray-500">コメントはありません</p>
      <% end %>
    </div>
    
    <div class="mt-8 flex justify-between">
      <%= link_to '一覧に戻る', posts_path, class: "text-blue-500 hover:underline" %>
      <%= link_to 'アイテム一覧に戻る', items_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>